{
    // ==============================================================================
    // VS Code Settings - Merged Configuration
    // Includes Go package auto-completion disabled + your existing settings
    // ==============================================================================
    
    // Red Hat telemetry
    "redhat.telemetry.enabled": false,
    
    // Terminal configuration
    "terminal.integrated.fontFamily": "Menlo for Powerline",
    "terminal.integrated.fontWeightBold": "bold",
    "terminal.integrated.enableMultiLinePasteWarning": false,

    // Python formatting
    "[python]": {
        "editor.formatOnType": true
    },
    
    // Go extension settings
    "go.toolsManagement.autoUpdate": true,
    "go.survey.prompt": false,
    // Disable automatic package insertion in new Go files
    "go.templateAutoImports": false,
    "go.addTags": false,
    "go.formatOnSave": false,
    "go.useCodeSnippetsOnFunctionSuggest": false,
    "editor.snippetSuggestions": "none",

    
    // Editor scrollbar configuration
    "editor.scrollbar.verticalScrollbarSize": 50,
    "editor.scrollbar.horizontal": "visible",
    "editor.scrollbar.horizontalScrollbarSize": 30,
    "editor.scrollbar.vertical": "visible",
    "workbench.editor.titleScrollbarSizing": "large"
}
